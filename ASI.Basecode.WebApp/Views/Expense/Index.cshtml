@model IEnumerable<ASI.Basecode.Services.ServiceModels.ExpenseViewModel>

@{
    ViewData["Title"] = "Expenses";
}
@section styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/expense.css"/>
}

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">


<div class="page-container">

    <div class="expenses-header d-flex justify-content-between align-items-center">
        <h1>Expenses</h1>
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addExpenseModal">
            <i class="fas fa-plus-circle"></i> Add Expenses
        </button>
    </div>
    <hr class="expenses-divider">


    <div class="table-container">
        <h2>My Expenses</h2>

        @if (Model == null || !Model.Any())
        {
            <p>No expenses found.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Subject</th>
                        <th>Category</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>
                                <span class="badge bg-secondary">@item.CategoryName</span>
                            </td>
                            <td>@item.Amount.ToString("C")</td>
                            <td>
                                @if (item.Status)
                                {
                                    <span class="badge bg-success">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Draft</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ExpenseId" class="btn btn-warning"><i class="fas fa-pencil-alt"></i></a>
                                <a asp-action="Delete" asp-route-id="@item.ExpenseId" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>


<!--To Call the expenseviewmodel-->
@{
    var newExpense = new ASI.Basecode.Services.ServiceModels.ExpenseViewModel();
}

<!-- Modal -->
<div class="modal fade" id="addExpenseModal" tabindex="-1" aria-labelledby="addExpenseModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-cstm">
            <div class="modal-header">
                <h2 class="addExpense-title" id="addExpenseModalLabel">Add Expenses</h2>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddExpense" method="post">
                    <div class="form-group mb-3">
                        <input asp-for="@newExpense.Title" class="form-control addExpense-field" placeholder="Subject" />
                        <span asp-validation-for="@newExpense.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <div class="input-group gap-3">
                            <input asp-for="@newExpense.Amount" class="form-control addExpense-field" placeholder="Amount" />
                            @* <select class="form-select curr-input" asp-for="Currency">
                                <option value="PHP">PHP</option>
                                <option value="USD">USD</option>
                            </select> *@
                        </div>
                        <span asp-validation-for="@newExpense.Amount" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <select asp-for="@newExpense.CategoryName" class="form-select addExpense-field" placeholder="Select Category">
                            <option value="" disabled selected hidden>Select Category</option>
                            <option value="Travel">Travel</option>
                            <option value="Food">Food</option>
                            <option value="Others">Others</option>
                        </select>
                        <div class="text-end mt-2">
                            <a href="#" class="text-muted">Create New Category List</a>
                        </div>
                        <span asp-validation-for="@newExpense.CategoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <textarea asp-for="@newExpense.Description" class="form-control box-input" rows="4" placeholder="Description"></textarea>
                        <span asp-validation-for="@newExpense.Description" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" name="saveAsDraft" class="btn btn-outline-success btn-md px-4">Draft</button>
                        <button type="submit" name="saveAsPublish" class="btn btn-custom btn-md px-4">Save and Publish</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

