
@using ASI.Basecode.Services.ServiceModels
@model UserViewModel

@{
    ViewBag.LoginView = true;
    ViewData["Title"] = "Create Account";
}
@section styles {
    <link rel="stylesheet" href="~/css/register.css" />
}

<div class="register-box h-auto top">
    <div class="row d-flex justify-content-center align-items-center h-100">

        <div class="col-md-6">
            <h1 class="header-text text-center mb-5">GasTwo</h1>
            <div class="card rounded-3 text-black rcard-bg">
                <div class="card-body p-md-5 mx-md-4">
                    <h3 class="mb-4">Sign Up</h3>
                    <form method="post" action="/Account/Register">
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label class="form-label custom-label" for="firstName">First Name</label>
                                <input type="text" id="firstName" class="form-control input-lg" asp-for="FirstName" placeholder="First Name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label custom-label" for="lastName">Last Name</label>
                                <input type="text" id="lastName" class="form-control input-lg" asp-for="LastName" placeholder="Last Name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label custom-label" for="username">Username</label>
                            <input type="text" id="username" class="form-control input-lg" asp-for="Username" placeholder="Username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <label class="form-label custom-label" for="password">Password</label>
                            <input type="password" id="password" class="form-control input-lg" asp-for="Password" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>                      
                        <div class="form-outline mb-5">
                            <label class="form-label custom-label" for="confirmPassword">Confirm Password</label>
                            <input type="password" id="confirmPassword" class="form-control input-lg" asp-for="ConfirmPassword" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>                   
                        <div class="text-center pt-1 mb-5 pb-1 d-flex flex-column align-items-center">
                            <button type="submit" class="btn signup-btn gradient-custom-2 mb-3" type="submit">
                                Sign Up &#8594;
                            </button>
                            <a asp-controller="Account" asp-action="Login">&#8592; Back to Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        var errorMessage = '@TempData["ErrorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);
                }
    </script>
}
