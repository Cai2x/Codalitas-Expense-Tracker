@model ASI.Basecode.Services.ServiceModels.CategoryViewModel


<div class="modal fade" id="addCategoryModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content addcategory-content">
            <div class="modal-header">
                <h2 class="modal-title" id="addCategoryModalLabel">Add Categories</h2>
                <button type="button" class="btn-close close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post" id="addCategoryForm">
                    <div class="form-group mb-3">
                        <input asp-for="Name" class="form-control input-field" placeholder="Category Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <textarea asp-for="Description" class="form-control textarea-field" placeholder="Description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="button" data-bs-dismiss="modal" class="btn btn-outline-success px-4 me-1">Cancel</button>
                        <button type="submit" class="btn btn-custom  px-4">Save and Publish</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Add event listener to fetch categories and reset form on modal show
    document.getElementById('addCategoryModal').addEventListener('show.bs.modal', function (event) {
        resetForm();
    });

    function resetForm() {
        // Reset the form fields to empty
        const form = document.getElementById('addCategoryForm');
        form.reset();  // Resets all form fields
    }
</script>