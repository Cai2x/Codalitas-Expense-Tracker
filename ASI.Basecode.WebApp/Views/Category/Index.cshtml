@model CategoryViewModel
@using ASI.Basecode.Services.ServiceModels


@{
    ViewData["Title"] = "Category";
}

@section styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="~/css/category.css" />
}




<div class="page container">
    <div class="header d-flex justify-content-between align-items-center">
        <h1 class="title">Categories</h1>
            <!--Modal Button-->
            <div>
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
                <i class="fas fa-plus-circle"></i> Add Category
            </button>

            <!-- Modal -->
            <div class="modal fade" id="addCategoryModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h2 class="modal-title" id="addCategoryModalLabel">Add Categories</h2>
                            <button type="button" class="btn-close close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form asp-action="AddCategory" method="post">
                                <div class="form-group mb-3">
                                    <input asp-for="Name" class="form-control input-field" placeholder="Category Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-4">
                                    <textarea asp-for="Description" class="form-control textarea-field" placeholder="Description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="text-center">
                                    <button type="submit" name="saveAsDraft" class="btn btn-outline-success btn-md px-4 me-1">Draft</button>
                                    <button type="submit" name="saveAndPublish" class="btn btn-custom btn-md px-4">Save and Publish</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
