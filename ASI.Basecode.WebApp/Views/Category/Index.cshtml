@model IEnumerable<ASI.Basecode.Services.ServiceModels.CategoryViewModel>


@{
    ViewData["Title"] = "Category";
}

@{
    var newCategory = new ASI.Basecode.Services.ServiceModels.CategoryViewModel();
}

@section styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Newsreader:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> 
    <link rel="stylesheet" href="~/css/category.css" />
}

    <div class="catgory-header d-flex justify-content-between align-items-center">
        <h1>Categories</h1>
        
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCategoryModal">
            <i class="fas fa-plus-circle"></i> Add Category
        </button>
    </div>
    <hr class="category-divider">

<div class="table-container">
    <h2>My Category</h2>

    @if (Model == null || !Model.Any())
    {
        <p>No categories found.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date Created</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>
                            <span>@item.CategoryDateCreated.ToShortDateString()</span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning"><i class="fas fa-pencil-alt"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="addCategoryModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" id="addCategoryModalLabel">Add Categories</h2>
                <button type="button" class="btn-close close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddCategory" method="post">
                    <div class="form-group mb-3">
                        <input asp-for="@newCategory.Name" class="form-control input-field" placeholder="Category Name" />
                        <span asp-validation-for="@newCategory.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-4">
                        <textarea asp-for="@newCategory.Description" class="form-control textarea-field" placeholder="Description"></textarea>
                        <span asp-validation-for="@newCategory.Description" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" name="saveAsDraft" class="btn btn-outline-success  px-4 me-1">Draft</button>
                        <button type="submit" name="saveAndPublish" class="btn btn-custom  px-4">Save and Publish</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
