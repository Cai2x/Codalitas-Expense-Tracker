@model ASI.Basecode.WebApp.Models.ChangePasswordModel

@section styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
}

<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content change-password-modal">
            <div class="modal-header">
                <h5 class="modal-title" id="changePasswordModalLabel">Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-controller="Account" asp-action="ChangePassword" method="post">
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label custom-label">Current Password</label>
                        <input type="password" class="form-control" id="currentPassword" asp-for="OldPassword" placeholder="Enter current password">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="newPassword" class="form-label custom-label">New Password</label>
                        <input type="password" class="form-control" id="newPassword" asp-for="NewPassword" placeholder="Enter new password">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                    <div class="mb-5">
                        <label for="confirmNewPassword" class="form-label custom-label">Confirm New Password</label>
                        <input type="password" class="form-control" id="confirmNewPassword" asp-for="ConfirmPassword" placeholder="Confirm new password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary save-button">Save Password →</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
